= form_for(@cover) do |f|
  - if @cover.errors.any?
    #error_explanation
      %h2
        = pluralize(@cover.errors.count, "error")
        prohibited this cover from being saved:
      %ul
        - @cover.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :path
    %br/
    = f.text_field :path
  .actions
    = f.submit

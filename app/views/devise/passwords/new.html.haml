.container
  .mainbox.col-md-4.col-md-offset-4.col-sm-6{:style => "margin-top:50px;"}
    .panel.panel-info
      .panel-heading
        .panel-title
          = t('devise.registrations.forgot_password')
      .panel-body{:style => "padding-top:30px"}
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f|
          .input-group{:style => "margin-bottom: 25px"}
            %span.input-group-addon
              %i.glyphicon.glyphicon-user
            = f.email_field :email, autofocus: true, :class => "form-control", :placeholder => t('devise.registrations.email') 
          .actions
            = f.submit t('devise.registrations.reset_password'), :class => 'btn btn-lg btn-primary btn-block'
